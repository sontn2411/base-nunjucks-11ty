
{% from "components/icons.njk" import icon %}

<nav id="main-header" class="bg-color-2 min-h-[90px] w-full flex items-center shadow-lg fixed top-0 left-0 z-50 transition-transform duration-300 -translate-y-full">
  <div class="container mx-auto px-4 max-w-7xl flex flex-wrap justify-between items-center relative">
    <a href="/" class="flex items-center gap-2">
      <img src="/assets/images/logo-ngang.png" class="h-16 w-auto object-contain rounded" alt="Logo" />
    </a>
    <ul class="absolute left-1/2 transform -translate-x-1/2  items-center h-full hidden lg:flex">
      {% for item in navigation %}
      <li class="h-full flex items-center">
        <div class="h-8 w-px bg-color-3"></div>
        <a href="{{ item.url }}" class="flex flex-col items-center gap-1 text-gray-700 hover:text-primary transition-colors group px-6">
          {{ icon(item.icon, "h-6 w-6 text-primary group-hover:text-primary/80") }}
          <span class="text-xs font-semibold uppercase tracking-wide">{{ item.label }}</span>
        </a>
        {% if loop.last %}
        <div class="h-8 w-px bg-color-3"></div>
        {% endif %}
      </li>
      {% endfor %}
    </ul>
    <div class="flex items-center gap-6 ml-auto">
      <a href="/booking/" class="bg-primary hover:bg-primary/90 text-white font-medium rounded-lg text-sm px-6 py-2.5 focus:outline-none shadow-lg hover:shadow-xl transition-all">
        Đặt lịch ngay
      </a>
      <div class="items-center gap-2 group cursor-pointer hidden xl:flex">
      <div class="flex items-center gap-2 group cursor-pointer">
        <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center text-primary group-hover:bg-primary group-hover:text-white transition-colors">
          {{ icon("phone", "h-5 w-5") }}
        </div>
        <div class="flex flex-col">
          <span class="text-xs text-gray-500 font-medium group-hover:text-primary transition-colors">Hotline 24/7</span>
          <a href="tel:0123456789" class="text-sm font-bold text-gray-800 group-hover:text-primary transition-colors">0123 456 789</a>
        </div>
      </div>
    </div>
  </div>
</nav>
