{% macro doctorCard(doctor) %}
  <div class=" rounded-3xl overflow-hidden p-6 md:p-12 mb-12">
    <div class="flex flex-col md:flex-row gap-8 md:gap-12">
      <!-- Left Column: Image -->
      <div class="w-full md:w-5/12 shrink-0">
        <div class="aspect-3/4 rounded-2xl overflow-hidden shadow-lg relative">
          <img
            src="{{ doctor.image }}"
            alt="{{ doctor.name }}"
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      </div>

      <!-- Right Column: Info -->
      <div class="w-full md:w-7/12 flex flex-col">
        <!-- Header -->
        <div class="flex justify-between items-start mb-6">
          <div>
            <p class="text-gray-600 mb-1">{{ doctor.title }}</p>
            <div class="flex items-baseline gap-3">
              <h3 class="text-3xl font-bold text-gray-900">
                {{ doctor.name }}
              </h3>
            </div>
          </div>

          <!-- Badge -->
          {% if doctor.badges %}
            <div class="flex flex-col gap-2">
              {% for badge in doctor.badges %}
                <div
                  class="w-24 h-24 rounded-full border border-primary flex flex-col items-center justify-center text-center bg-white shrink-0"
                >
                  <span class="text-primary font-bold text-sm leading-tight"
                    >{{ badge.text }}</span
                  >
                  {% if badge.subtext %}
                    <span class="text-xs text-gray-500 mt-1"
                      >{{ badge.subtext }}</span
                    >
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </div>

        <!-- Quote Section -->
        <div
          class="border-l-4 border-color-5 pl-6 py-2 mb-8 bg-white/50 rounded-r-lg"
        >
          <p class="text-xl font-medium text-primary italic">
            "{{ doctor.quote }}"
          </p>
        </div>

        <!-- Description -->
        <div
          class="prose prose-lg text-gray-600 mb-10 leading-relaxed text-justify"
        >
          {{ doctor.description }}
        </div>

        <!-- Bottom Details Grid -->
        <div
          class="grid md:grid-cols-2 gap-8 mt-auto pt-8 border-t border-gray-200"
        >
          <!-- Specialties -->
          <div>
            <h4
              class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2"
            >
              <span class="text-primary text-xl">❖</span> Chuyên môn
            </h4>
            <div class="flex flex-wrap gap-2">
              {% for item in doctor.specialties %}
                <span
                  class="px-3 py-1.5 bg-color-10 text-primary text-sm font-semibold rounded-lg"
                >
                  {{ item }}
                </span>
              {% endfor %}
            </div>
          </div>

          <!-- Timeline -->
          <div>
            <h4
              class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2"
            >
              <span class="text-primary text-xl">✦</span> Tiểu sử
            </h4>
            <div
              class="relative border-l-2 border-color-3 ml-1.5 space-y-6 pl-6 pb-2"
            >
              {% for item in doctor.biography %}
                <div class="relative">
                  <span
                    class="absolute -left-[31px] top-1.5 w-3 h-3 rounded-full bg-primary ring-4 ring-white"
                  ></span>
                  <div class="flex flex-col sm:flex-row sm:gap-2 text-sm">
                    <span class="font-bold text-gray-900 shrink-0 min-w-16"
                      >{{ item.year }}</span
                    >
                    <span class="text-gray-600">{{ item.event }}</span>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endmacro %}
