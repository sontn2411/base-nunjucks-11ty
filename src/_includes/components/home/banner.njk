{% set data = ['Khoa nội', 'Khoa ngoại', 'Nội soi'] %}

<section
  id="home-banner"
  class="grid grid-cols-1 lg:grid-cols-12 gap-6 lg:gap-14 px-4 lg:px-12 py-6 lg:py-0 h-auto animate-on-scroll"
>
  <!-- Left Sidebar -->
  <div
    class="col-span-1 lg:col-span-3 flex flex-col gap-2 order-2 lg:order-1 px-4 md:px-8 lg:px-12"
  >
    <div class="hidden lg:block">
      <img
        src="/assets/images/logo-doc.png"
        class="w-full h-40 object-contain"
        alt="Logo"
      />
    </div>
    <ul class="flex flex-wrap justify-center  ">
      {% for item in data %}
        <li
          class=" px-2 lg:px-1 border-r border-gray-300 last:border-r-0 lg:border-l lg:border-r-0 lg:first:border-l-0 text-sm font-medium text-[#7B8F85] whitespace-nowrap"
        >
          {{ item }}
        </li>
      {% endfor %}
    </ul>
    <ul class="grid grid-cols-2 gap-4 py-2">
      {% for item in navigation %}
        <li
          class="flex flex-col group items-center bg-white rounded-xl p-4 shadow-sm transition-shadow cursor-pointer group"
        >
          {{ icon(item.icon, "h-10 w-10 group-hover:-translate-y-1 transition-transform duration-300 text-primary group-hover:text-primary/80 transition-colors") }}
          <a
            href="{{ item.url }}"
            class="text-sm font-medium text-primary mt-1 group-hover:text-primary/80 transition-colors"
            >{{ item.label }}</a
          >
        </li>
      {% endfor %}

      <li>
        <a
          href="/booking/"
          class="bg-primary h-12 hover:bg-primary/90 text-white w-full font-medium rounded-lg text-sm flex justify-center items-center focus:outline-none shadow-lg hover:shadow-xl transition-all"
        >
          Đặt lịch ngay
        </a>
      </li>
      <li>
        <div
          class="flex gap-1 h-12 items-center justify-center bg-[#002A1D] text-white p-2 rounded-lg shadow-md"
        >
          {{ icon("phone", "h-5 w-5") }}
          <a href="tel:0123456789" class="text-xs font-bold hover:underline"
            >0123 456 789</a
          >
        </div>
      </li>
    </ul>

    <div class="mt-8 px-2 hidden lg:block">
      <table class="w-full text-sm">
        <thead>
          <tr class="text-primary border-b border-gray-300">
            <th class="pb-2 pt-2 font-bold text-left">Giờ làm việc</th>
            <th class="pb-2 pt-2 font-medium text-center">T2</th>
            <th class="pb-2 pt-2 font-medium text-center">T3</th>
            <th class="pb-2 pt-2 font-medium text-center">T4</th>
            <th class="pb-2 pt-2 font-medium text-center">T5</th>
            <th class="pb-2 pt-2 font-medium text-center">T6</th>
            <th class="pb-2 pt-2 font-medium text-center">T7</th>
            <th class="pb-2 pt-2 font-medium text-center">CN</th>
          </tr>
        </thead>
        <tbody class="text-gray-600">
          <tr class="border-b border-gray-100">
            <td class=" py-2 font-medium whitespace-nowrap text-primary">
              09:00 - 12:30
            </td>
            <td class=" text-center text-primary text-2xl">○</td>
            <td class=" text-center text-primary text-2xl">○</td>
            <td class=" text-center text-primary text-2xl">○</td>
            <td class=" text-center text-primary text-2xl">○</td>
            <td class=" text-center text-primary text-2xl">○</td>
            <td class=" text-center text-primary text-2xl">○</td>
            <td class=" text-center text-gray-400 ">—</td>
          </tr>
          <tr>
            <td class="  font-medium whitespace-nowrap text-primary ">
              14:30 - 18:00
            </td>
            <td class=" text-center text-primary text-2xl">○</td>
            <td class=" text-center text-primary text-2xl">○</td>
            <td class=" text-center text-primary text-2xl">○</td>
            <td class=" text-center text-primary text-2xl">○</td>
            <td class=" text-center text-primary text-2xl">○</td>
            <td class=" text-center text-primary text-2xl">○</td>
            <td class=" text-center text-gray-400">—</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Right Content (Carousel) -->
  <div class="col-span-1 lg:col-span-9 order-1 lg:order-2">
    <div
      id="default-carousel"
      class="relative w-full h-64 md:h-96 lg:h-full"
      data-carousel="slide"
    >
      <!-- Carousel wrapper -->
      <div class="relative overflow-hidden rounded-2xl h-full">
        {% for banner in banners %}
          <!-- Item {{ loop.index }} -->
          <div class="duration-700 ease-in-out hidden" data-carousel-item>
            <img
              src="{{ banner.src }}"
              class="absolute block w-full h-full object-cover top-0 left-0"
              alt="{{ banner.title }}"
            />
            <!-- Text Overlay & Gradient -->
            <div
              class="absolute inset-0 bg-linear-to-r from-black/80 via-black/50 to-transparent flex flex-col justify-center px-6 lg:px-20 text-white"
            >
              <h2
                class="text-2xl lg:text-5xl font-bold mb-3 lg:mb-4 max-w-2xl leading-tight"
              >
                {{ banner.title }}
              </h2>
              <p
                class="text-sm lg:text-xl mb-6 lg:mb-8 max-w-xl text-gray-200 line-clamp-2 lg:line-clamp-none"
              >
                {{ banner.desc }}
              </p>
              <a
                href="/booking/"
                class="inline-flex items-center justify-center w-fit px-5 .5 lg:px-6 lg:py-2 text-sm lg:text-base font-medium text-primary bg-white rounded-lg hover:bg-gray-100 focus:ring-4 focus:ring-primary/30 transition-all"
              >
                {{ banner.cta }}
                <svg
                  class="w-3.5 h-3.5 ms-2 rtl:rotate-180"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 14 10"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"
                  />
                </svg>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- Slider indicators -->
      <div
        class="absolute z-40 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse"
      >
        {% for banner in banners %}
          <button
            type="button"
            class="w-2.5 h-2.5 lg:w-3 lg:h-3 rounded-full bg-white/50 hover:bg-white focus:outline-none backdrop-blur-sm aria-current:bg-white aria-current:ring-2 aria-current:ring-primary/50 transition-all"
            aria-current="{{ 'true' if loop.first else 'false' }}"
            aria-label="Slide {{ loop.index }}"
            data-carousel-slide-to="{{ loop.index0 }}"
          ></button>
        {% endfor %}
      </div>

      <!-- Slider controls -->
      <button
        type="button"
        class="absolute top-0 start-0 z-40 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
        data-carousel-prev
      >
        <span
          class="inline-flex items-center justify-center w-8 h-8 lg:w-10 lg:h-10 rounded-full bg-white/30 hover:bg-white/50 group-focus:ring-4 group-focus:ring-white group-focus:outline-none backdrop-blur-sm transition-all"
        >
          <svg
            class="w-3 h-3 lg:w-4 lg:h-4 text-white rtl:rotate-180"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 6 10"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 1 1 5l4 4"
            />
          </svg>
          <span class="sr-only">Previous</span>
        </span>
      </button>
      <button
        type="button"
        class="absolute top-0 end-0 z-40 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
        data-carousel-next
      >
        <span
          class="inline-flex items-center justify-center w-8 h-8 lg:w-10 lg:h-10 rounded-full bg-white/30 hover:bg-white/50 group-focus:ring-4 group-focus:ring-white group-focus:outline-none backdrop-blur-sm transition-all"
        >
          <svg
            class="w-3 h-3 lg:w-4 lg:h-4 text-white rtl:rotate-180"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 6 10"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m1 9 4-4-4-4"
            />
          </svg>
          <span class="sr-only">Next</span>
        </span>
      </button>
    </div>
  </div>
</section>
