<section class="py-24 animate-on-scroll">
  <div class="container mx-auto px-4 max-w-7xl ">
    <div class="flex flex-col md:flex-row gap-10">
      <!-- Title Column -->
      <div
        class="md:w-1/4 relative flex flex-col items-center md:items-start text-center md:text-left"
      >
        <span
          class="text-primary/80 font-bold tracking-widest text-xs uppercase mb-3 block"
          >Tin tức & Sự kiện</span
        >
        <h2 class="text-4xl font-bold text-gray-900 leading-tight mb-6">
          Thông báo <br />
          <span class="text-primary">Mới nhất</span>
        </h2>
        <div class="h-1.5 w-16 bg-color-6 rounded-full"></div>
      </div>

      <div class="md:w-3/4">
        <div class="flex flex-col gap-6">
          {% from "components/newsCard.njk" import newsCard %}
          {% for item in news %}
            {{ newsCard(item) }}
          {% endfor %}
        </div>
        <div class="flex  justify-end">
          <a
            href="/news/"
            class="flex items-center group gap-2 mt-6   text-gray-800 text-sm  duration-300 hover:text-primary/80 font-medium transition-colors"
          >
            Xem tất cả
            <span
              class="bg-primary h-8 w-8 rounded-full border border-primary group-hover:translate-x-1.5 duration-300  group-hover:bg-white group-hover:text-primary transition-all flex items-center justify-center text-white"
            >
              {{ icon('arrow-right', 'w-4 h-4') }}
            </span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
