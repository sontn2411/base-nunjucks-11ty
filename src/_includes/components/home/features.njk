<section class="relative overflow-hidden py-20">
  <div class="container mx-auto px-4 max-w-7xl  relative z-10">
 <h2 class="text-primary font-display font-bold tracking-wider text-sm uppercase mb-2 text-center">Đặc điểm của chúng tôi</h2>
<h1 class="text-3xl md:text-4xl font-bold text-gray-800 text-center  mb-4">Ưu điểm nổi bật</h1>
<div class="w-16 h-1 bg-primary mx-auto rounded-full mb-12"></div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {% for feature in features%}
           <div class="group flex flex-col items-center text-center">
          <div class="w-full aspect-4/3 overflow-hidden rounded-2xl mb-6 feature-card-shadow relative">
          <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/10 transition-colors duration-300 z-10"></div>
          <img alt="Person holding a smartphone using a medical application" class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500" src={{feature.image}}/>
          </div>
          <h3 class="text-xl font-bold text-primary mb-4 group-hover:text-primary-hover transition-colors">
           {{feature.title}}
          </h3>
          <p class="text-sm leading-relaxed text-gray-600  max-w-sm mx-auto">
           {{feature.description}}
          </p>
          </div>
      {%endfor%}
      </div>

  </div>
<div class="mt-16 text-center">
<a class="inline-flex items-center gap-2 bg-primary hover:bg-primary-hover text-white font-bold py-4 px-10 rounded-lg transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 group" href="#">
<span>Xem thêm</span>

</a>
</div>
</section>
