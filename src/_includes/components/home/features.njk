<section class="py-24 relative overflow-hidden animate-on-scroll">
  <div class="container mx-auto px-4 max-w-7xl relative z-10">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2
        class="text-primary font-display font-bold tracking-wider text-sm uppercase mb-3"
      >
        Đặc điểm của chúng tôi
      </h2>
      <h1 class="text-3xl md:text-4xl font-bold text-gray-800">
        Ưu điểm nổi bật
      </h1>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      {% for feature in features %}
        <div
          class="group flex flex-col items-center text-center transition-transform duration-300 hover:-translate-y-2"
        >
          <!-- Image/Icon Container -->
          <div
            class="w-full aspect-4/3 overflow-hidden rounded-2xl mb-6 relative"
          >
            <div
              class="absolute inset-0 bg-primary/0 group-hover:bg-primary/10 transition-colors duration-300 z-10 pointer-events-none"
            ></div>
            <img
              src="{{ feature.image }}"
              alt="{{ feature.title }}"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
            />
          </div>

          <!-- Content -->
          <h3
            class="text-xl font-bold text-gray-800 mb-3 group-hover:text-primary transition-colors duration-300"
          >
            {{ feature.title }}
          </h3>
          <p class="text-gray-600 leading-relaxed max-w-sm mx-auto">
            {{ feature.description }}
          </p>
        </div>
      {% endfor %}
    </div>

    <!-- CTA -->
    <div class="mt-16 text-center">
      <a
        href="#"
        class="inline-flex items-center justify-center gap-2 bg-primary text-white font-bold py-4 px-10 rounded-full shadow-lg shadow-primary/30 hover:shadow-primary/50 hover:-translate-y-1 transition-all duration-300"
      >
        <span>Xem thêm</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="w-5 h-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"
          />
        </svg>
      </a>
    </div>
  </div>
</section>
