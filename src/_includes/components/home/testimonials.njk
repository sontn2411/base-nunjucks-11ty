<section class="py-20 md:py-28 bg-[#effaf6]/50 animate-on-scroll">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="text-center mb-16 md:mb-20">
      <span
        class="text-primary font-bold tracking-widest text-xs uppercase mb-3 block"
        >Cảm nhận khách hàng</span
      >
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">
        Bệnh nhân nói gì về chúng tôi
      </h2>
      <div class="w-20 h-1.5 bg-primary/20 mx-auto mt-6 rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-10">
      {% for item in testimonials %}
        <div
          class="bg-white p-8 md:p-10 rounded-3xl shadow-[0_10px_40px_-10px_rgba(0,0,0,0.05)] hover:shadow-[0_20px_50px_-10px_rgba(0,0,0,0.1)] transition-all duration-300 hover:-translate-y-2 relative border border-gray-50 flex flex-col h-full"
        >
          <!-- Quote Icon -->
          <div
            class="absolute -top-4 right-8 bg-primary text-white w-12 h-12 flex items-center justify-center rounded-full shadow-lg shadow-primary/30"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M14.017 21L14.017 18C14.017 16.8954 14.9124 16 16.017 16H19.017C19.5693 16 20.017 15.5523 20.017 15V9C20.017 8.44772 19.5693 8 19.017 8H15.017C14.4647 8 14.017 8.44772 14.017 9V11C14.017 11.5523 13.5693 12 13.017 12H12.017V5H22.017V15C22.017 18.3137 19.3307 21 16.017 21H14.017ZM5.0166 21L5.0166 18C5.0166 16.8954 5.91203 16 7.0166 16H10.0166C10.5689 16 11.0166 15.5523 11.0166 15V9C11.0166 8.44772 10.5689 8 10.0166 8H6.0166C5.46432 8 5.0166 8.44772 5.0166 9V11C5.0166 11.5523 4.56889 12 4.0166 12H3.0166V5H13.0166V15C13.0166 18.3137 10.3303 21 7.0166 21H5.0166Z"
              />
            </svg>
          </div>

          <div class="mb-6 flex-grow">
            <div class="flex text-yellow-400 mb-4 text-sm gap-1">
              {% for i in range(0, item.rating) %}
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                  />
                </svg>
              {% endfor %}
            </div>
            <p class="text-gray-600 leading-relaxed italic text-lg">
              "{{ item.content }}"
            </p>
          </div>

          <div
            class="flex items-center gap-4 pt-6 border-t border-gray-100 mt-auto"
          >
            <img
              src="{{ item.avatar }}"
              alt="{{ item.name }}"
              class="w-12 h-12 rounded-full object-cover ring-4 ring-gray-50"
            />
            <div>
              <h4 class="font-bold text-gray-900 text-sm md:text-base">
                {{ item.name }}
              </h4>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
