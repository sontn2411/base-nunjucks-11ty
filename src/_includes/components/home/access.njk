<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-800 mb-2">Thông tin liên hệ</h2>
      <p class="text-primary font-semibold tracking-wider text-sm uppercase">Access</p>
    </div>

    <div class="bg-white rounded-2xl shadow-lg overflow-hidden flex flex-col md:flex-row">
      <!-- Info Column -->
      <div class="md:w-1/3 p-8 lg:p-12 flex flex-col justify-center">
        <div class="mb-8">
          <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <span class="p-2 bg-primary/10 rounded-lg text-primary">
              {{ icon("location", "h-5 w-5") }}
            </span>
            Địa chỉ
          </h3>
          <p class="text-gray-600">
            Số 01, Đường ABC, Quận XYZ,<br>
            Thành phố Hà Nội, Việt Nam
          </p>
          <a href="https://maps.google.com" target="_blank" class="inline-block mt-3 text-primary font-medium hover:underline">
            Xem trên Google Maps &rarr;
          </a>
        </div>

        <div class="mb-8">
           <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <span class="p-2 bg-primary/10 rounded-lg text-primary">
              {{ icon("phone", "h-5 w-5") }}
            </span>
            Điện thoại
          </h3>
          <p class="text-gray-600">
            Tổng đài tư vấn & đặt lịch:<br>
          </p>
          <a href="tel:0123456789" class="text-2xl font-bold text-primary mt-1 block hover:opacity-80 transition-opacity">
            0123 456 789
          </a>
        </div>
      </div>

      <!-- Map Column -->
      <div class="md:w-2/3 h-64 md:h-auto min-h-[400px] bg-gray-200">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.096814183571!2d105.7800937149326!3d21.028811885998398!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab86cece9ac1%3A0xa9bc04e04602dd85!2zSF9uZyBQaMOidSBCw6xuaCwgQOG6p3UgR2nhuqV5LCBIw6AgTuG7mWksIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1645432454321!5m2!1svi!2s" 
          width="100%" 
          height="100%" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy"
          class="w-full h-full object-cover">
        </iframe>
      </div>
    </div>
  </div>
</section>
