{% from "components/icons.njk" import icon %}
{% from "components/logo.njk" import logo %}

<header
  class="fixed top-0 left-0 right-0 z-50 px-4 md:px-6 py-4 md:py-6 transition-all duration-300"
>
  <div
    class="glass-panel mx-auto max-w-7xl rounded-2xl px-6 py-4 flex items-center justify-between"
  >
    {% include "components/navbar.njk" %}

    <div class="flex justify-center grow text-center z-10 w-1/3">
      {{ logo() }}
    </div>

    <button
      id="mobile-menu-toggle"
      class="lg:hidden  absolute right-4 z-20 text-white hover:text-primary transition-colors "
      aria-controls="mobile-menu"
      aria-expanded="false"
    >
      {{ icon('menu', 'text-white') }}
    </button>

    <div class="flex items-center justify-end gap-6 w-1/3">
      {% include "components/language.njk" %}
      <div
        class="hidden xl:flex items-center gap-3 border-l border-white/10 pl-6"
      >
        <div class="text-right">
          <div class="text-xs font-bold text-white tracking-widest">19:42</div>
          <div class="text-[0.6rem] text-primary uppercase tracking-wider">
            New York
          </div>
        </div>
        {{ icon('clear_night', 'text-primary/80') }}
      </div>
    </div>
  </div>

  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-menu"
    class="fixed inset-0 z-[100] transform translate-x-full transition-transform duration-500 ease-in-out lg:hidden"
  >
    <div
      id="mobile-menu-backdrop"
      class="absolute inset-0 bg-background-dark/95 backdrop-blur-xl"
    ></div>
    <div class="relative h-full flex flex-col p-8">
      <div class="flex justify-end">
        <button
          id="mobile-menu-close"
          class="text-white/80 hover:text-primary transition-colors"
        >
          {{ icon('close', 'text-2xl text-white') }}
        </button>
      </div>
      <nav class="flex flex-col items-center justify-center grow gap-8">
        {% for item in menu %}
          <a
            class="text-2xl font-serif text-white hover:text-primary transition-colors tracking-widest uppercase"
            href="{{ item.url }}"
            >{{ item.name }}</a
          >
        {% endfor %}
      </nav>
      <div class="flex flex-col items-center gap-6 mt-auto">
        <!-- Mobile Language List -->
        <div class="flex items-center gap-6">
          <a
            href="#"
            class="text-white hover:text-primary transition-colors font-serif text-lg tracking-widest"
            >EN</a
          >
          <span class="text-white/20">|</span>
          <a
            href="#"
            class="text-white hover:text-primary transition-colors font-serif text-lg tracking-widest"
            >VI</a
          >
          <span class="text-white/20">|</span>
          <a
            href="#"
            class="text-white hover:text-primary transition-colors font-serif text-lg tracking-widest"
            >FR</a
          >
        </div>
        <button
          class="w-full bg-primary text-background-dark font-bold uppercase tracking-widest px-8 py-4 rounded-lg hover:bg-white transition-colors duration-300"
        >
          Check Availability
        </button>
      </div>
    </div>
  </div>
</header>
